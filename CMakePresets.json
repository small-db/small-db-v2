{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
            }
        },
        {
            "name": "debug",
            "description": "debug build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "DEBUG",
                "CMAKE_C_FLAGS_DEBUG": "-g",
                "CMAKE_CXX_FLAGS_DEBUG": "-g"
            }
        }
    ]
}