    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "sql_test",
            "program": "${workspaceFolder}/bazel-bin/test/integration-test/sql_test",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "server",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bazel-bin/src/server/main",
            "args": [
                "5432"
            ],
            "cwd": "${workspaceFolder}",
            // build the server before launching it
            // "preLaunchTask": "build server (debug)"
        },
        {
            "name": "hello_world",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bazel-bin/src/tmp/hello_world",
            "cwd": "${workspaceFolder}",
            "sourceMap": {
                "/proc/self/cwd/": "${workspaceFolder}/"
            },
            // build the binary before launching it
            "preLaunchTask": "build hello_world (debug)",
        },
    ]
}